            </div>           

          </div>
        </div>
      </div>

      <div class="title-our-artists">
        <h3>Our Artists</h3>
      </div>    
      <div class="container container-artists-loop d-flex">               
        <% resultArtist.forEach(artist => { %>
        <div class="row row-artists-loop">  
          
          <div class="col-lg-4 col-sm-6 col-xs-12 col-artists-loop_ d-flex">
            <a href="/artist/oneArtist/<%= artist.artist_id %>">
              <img class="img-artists-loop"
                src="/images/artists/<%= artist.img %>"
                alt=""
                width="280"
              />
              <div class="artist-name-in-loop">
                <h5 class="h5-artists-name" style="color:black;"><%= artist.alias %></h5>
              </div>
            </a>
          
          </div>

        </div>
        <% }) %>   

        <% resultArtist.forEach(artist => { %>
        <div class="row row-artists-loop">          
          <div class="col-lg-4 col-sm-6 col-xs-12 col-artists-loop_ d-flex">        
            <div class="card">
              <div class="bg-image hover-overlay ripple" data-mdb-ripple-color="light">
                <img src="/images/artists/<%= artist.img %>" class="img-fluid"/>
                <a href="#!">
                  <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
                </a>
              </div>
              <div class="card-body">
                <h5 class="card-title">Card title</h5>
                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                <a href="/artist/oneArtist/<%= artist.artist_id %>" class="btn btn-primary">Button</a>
              </div>
            </div>
          </div>
          <% }) %> 

